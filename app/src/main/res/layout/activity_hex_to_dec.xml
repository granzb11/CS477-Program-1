<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relative_layout"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gustavoranz.cs477_program_1.Hex_to_Dec">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/question_textView"
                android:layout_column="1"
                android:textStyle="bold"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Signed: "
                android:id="@+id/signed_textView"
                android:layout_column="1"
                android:layout_marginRight="0dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_weight="20"
                />

            <EditText
                android:layout_width="fill_parent"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:id="@+id/signed_editText"
                android:layout_column="2"
                android:hint="Type Answer Here"
                 />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Unsigned: "
                android:id="@+id/unsigned_textView"
                android:layout_column="1"
                android:width="0dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_weight="20"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:id="@+id/unsigned_editText"
                android:layout_column="2"
                android:hint="Type Answer Here"
                 />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Check My Answers"
                android:id="@+id/check_answers_button"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/results_textView"
                android:layout_column="1"
                android:textSize="20dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Need A Calculator?"
                android:id="@+id/calculator_button"
                android:layout_column="1" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
